{
  "timers": "fake",
  "moduleNameMapper": {
    "\\.(css|scss)$": "identity-obj-proxy",
    ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/jest/fileMock.js"
  },
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage",
  "coveragePathIgnorePatterns": [
    "<rootDir>/(tools|lib|docs|.happypack|bin|public)/",
    "/flow-typed/",
    "/__fixtures__/",
    "/node_modules/"
  ],
  "transform": {
      "^.+\\.js$": "<rootDir>/tools/jest/transform.js"
  },
  "testRegex": ".*.test\\.js",
  "setupTestFrameworkScriptFile": "<rootDir>/tools/jest/setup.js",
  "snapshotSerializers": [
    "<rootDir>/node_modules/enzyme-to-json/serializer"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/(tools|lib|docs|.happypack|bin|public)/"
  ],
  "transformIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/(tools|lib|docs|.happypack|bin|public)/"
  ]
}
